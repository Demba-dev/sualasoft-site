<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sualasoft_contact" name="Sualasoft Contact">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container my-5">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <h1 class="mb-4">Contactez-nous</h1>
                            <p class="lead mb-4">Remplissez le formulaire ci-dessous pour nous contacter. Nous vous répondrons dans les meilleurs délais.</p>
                            
                            <form method="POST" action="/contact/submit" class="needs-validation">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="first_name" class="form-label">Prénom *</label>
                                        <input type="text" class="form-control" id="first_name" name="first_name" required="required"/>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="last_name" class="form-label">Nom *</label>
                                        <input type="text" class="form-control" id="last_name" name="last_name" required="required"/>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="email" class="form-label">Email *</label>
                                        <input type="email" class="form-control" id="email" name="email" required="required"/>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="phone" class="form-label">Téléphone *</label>
                                        <input type="tel" class="form-control" id="phone" name="phone" required="required"/>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="project_type" class="form-label">Type de Projet *</label>
                                    <select class="form-select" id="project_type" name="project_type" required="required">
                                        <option value="">-- Sélectionnez un type --</option>
                                        <option value="mobile">Développement Mobile</option>
                                        <option value="web">Développement Web</option>
                                        <option value="odoo">Intégration Odoo</option>
                                        <option value="infrastructure">Infrastructure SI</option>
                                        <option value="other">Autre</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="message" class="form-label">Message *</label>
                                    <textarea class="form-control" id="message" name="message" rows="5" required="required"></textarea>
                                </div>

                                <div class="d-grid gap-2">
                                    <button class="btn btn-primary btn-lg" type="submit">Envoyer mon message</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="contact_form_success" name="Contact Form Success">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container my-5">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2">
                            <div class="alert alert-success" role="alert">
                                <h4 class="alert-heading">Merci !</h4>
                                <p>Votre message a été envoyé avec succès. Nous vous répondrons dans les meilleurs délais.</p>
                                <hr/>
                                <p class="mb-0">
                                    <a href="/homepage" class="btn btn-primary">Retour à l'accueil</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
